{{#if editQuestion}}
<h3>Edit Question</h3>
  <div>
    <form>
      <div class="form-group">
        <label for="content">Question:</label>
        {{input value=content id="content" placeholder=question.content}}
      </div>

      <div class="form-group">
        <label for="notes">Notes:</label>
        {{input value=notes id="notes" placeholder=question.notes}}
      </div>

      <button {{action 'editQuestionSave' question}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'editQuestion'}}>Edit</button>
{{/if}}
